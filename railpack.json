{
  "name": "db-project",
  "language": "php",
  "base": "ubuntu:22.04",
  "paths": {
    "app": "src"
  },
  "build": {
    "aptPackages": [
      "php-cli",
      "php-mysql",
      "mysql-client",
      "zip",
      "unzip"
    ],
    "install": [
      "echo 'No extra install commands needed'"
    ],
    "build": [
      "echo 'Build step complete'"
    ]
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT -t src"
  },
  "variables": {
    "MYSQLHOST": {
      "required": true,
      "description": "MySQL host provided by Railway plugin"
    },
    "MYSQLUSER": {
      "required": true,
      "description": "MySQL user provided by Railway plugin"
    },
    "MYSQLPASSWORD": {
      "required": true,
      "description": "MySQL password provided by Railway plugin"
    },
    "MYSQLDATABASE": {
      "required": true,
      "description": "MySQL database name provided by Railway plugin"
    }
  },
  "secrets": [
    "MYSQLPASSWORD"
  ]
}
